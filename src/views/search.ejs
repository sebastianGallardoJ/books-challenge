<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books Repository</title>

  
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <%- include('partials/header.ejs') %>

    <div class="container">

      <form action="/books/search" method="get" >
        <div class="input-group">
          <input type="search" class="form-control" placeholder="Book Title..." name="search">
          <button type="submit" class="btn btn-secondary">Search</button>
        </div>
      </form>


    <div class="list-group">  
     
     
       <% if (books.length != 0) { %>
     <h2>resultado de la busqueda: </h2>
      <% books.forEach((book) => { %>
        <div class="container">
          <div class="px-4 py-5 my-5 text-center">
            <img class="d-block mx-auto mb-4" src="<%= book.cover %>" alt="" width="172" height="257">
            <h1 class="display-5 fw-bold"><%= book.title %></h1>
            <div class="col-lg-6 mx-auto">
              <p class="lead mb-4 fw-bold">Authors:<% book.authors.map((author, index) => { %>
                <%= `${author.name}${(index === book.authors.length - 1) ? '.' : ', '}` %>
              <% }) %></p>
              <p class="lead mb-4">descripcion: <%= book.description %></p>
  <% }) %>
  <% } else{%>
    <h4>No se encontraron resultados para tu busqueda...</h4>
    <% } %>
    </div>
  </div>
</div>


<%- include('partials/footer.ejs') %>
</body>
</html>